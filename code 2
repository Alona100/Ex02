using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace Ex01_03
{
    
    internal class Program
    {
        public static void Main()
        {
            aDynamicABCTree();
        }

        private static void aDynamicABCTree()
        {
            int heightOfTree = -1;

            Console.Write("Please enter the height of the tree (max height 15): ");
            while (!int.TryParse(Console.ReadLine(), out heightOfTree) || heightOfTree < 1 || heightOfTree > 15)
            {
                Console.WriteLine("Invalid input. Please enter a number between 1 and 15.");
            }

            Ex01_02.Program.PrintTreeRecursive(1, heightOfTree, 0);
        }
    }
}
